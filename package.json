{
  "name": "kotemari-ts",
  "version": "1.0.0",
  "description": "A magical context management library for LLM applications, written in TypeScript.",
  "keywords": [
    "LLM",
    "context",
    "dependency",
    "typescript",
    "code analysis",
    "prompt",
    "AI",
    "codebase"
  ],
  "author": "kitfactory <info@kitfactory.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kitfactory/kotemari-ts.git"
  },
  "homepage": "https://github.com/kitfactory/kotemari-ts#readme",
  "bugs": {
    "url": "https://github.com/kitfactory/kotemari-ts/issues"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md",
    "README_ja.md",
    "LICENSE",
    "docs/"
  ],
  "publishConfig": {
