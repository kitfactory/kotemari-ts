    "@types/chokidar": "^2.1.7",
    "@types/node": "^22.15.2",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "@vitest/coverage-v8": "^3.1.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "semantic-release": "^24.2.3",
    "tsup": "^8.4.0",
    "typedoc": "^0.28.3",
    "vitest": "^3.1.2"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "yaml": "^2.7.1"
